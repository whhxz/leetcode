   "source": [
    "class Solution:\n",
    "    def arrangeCoins(self, n: int) -> int:\n",
    "        num = 0\n",
    "        i = 0\n",
    "        while n > num:\n",
    "            i += 1\n",
    "            num += i\n",
    "        return i if num == n else i - 1"
   ]
  },
